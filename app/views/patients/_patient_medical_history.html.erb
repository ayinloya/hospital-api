


<div class="panel panel-default">
  <div class="panel-heading dark-grey">
    <h4 style="text-align:center">Medical histories of <%= @patient.name %></h4>
  </div>

  <div class="panel-body">
    <table class="table table-striped table-hover">
      <thead>
        <tr class="info">
          <!-- <th>#</th> -->

          <th>Signs and symptoms</th>
          <th>Diagnosis</th>
          <th>Date</th>

          <th colspan="3"> Action</th>
        </tr>

      </thead>

      <tbody class="panel-body">
       <%# i=0 %>
       <% @patient.medical_histories.each do |medical_history| %>

       <tr>
         <!-- <td><%#= i = i + 1  %></td>         -->
         <td> <%= truncate(medical_history.signsymptoms, :length => 100, :separator => ' ') %> 
         </td>
         <td style="width: 300px"><%= truncate(medical_history.diagnosis, :length => 100, :separator => ' ') %></td>
         <td><%= medical_history.created_at.to_formatted_s(:long_ordinal) %></td>
         <td><%= link_to 'Show', medical_history, class: "btn btn-primary btn-sm" %>
          <%= link_to 'Edit', edit_medical_history_path(medical_history), class: "btn btn-primary btn-sm" %>
          <%= link_to 'Destroy', medical_history_path(:patient => @patient, :id => medical_history.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm"%>
        </td>
      </tr>
      <% end %>
    </tbody>

  </table>

  <%= link_to 'New Medical history', new_medical_history_path(:patient => @patient), class: "btn btn-default" %>
</div>
</div>