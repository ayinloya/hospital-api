<script>
  function readURL(input) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();

      reader.onload = function (e) {
        $('#img_prev')
        .attr('src', e.target.result)
        .width(240)
        .height(240);
      };

      reader.readAsDataURL(input.files[0]);
    } 
  }
</script>









<%= form_for @patient, :html => {:multipart => true}, role:"form" do |f| %>
<div class="col-md-5">

  <div class="field form-group">
    <%= f.file_field :image , accept: 'image/png,image/gif,image/jpeg',onchange: "readURL(this);"%>


    <%= 
    if @patient.image?
      image_tag(@patient.image_url, id: "img_prev", class: "img-thumbnail")
    else
      image_tag("default.png", id: "img_prev", alt: "no image")
      end %>
      <%= f.hidden_field :image_cache %>


    </div>
    <div class="actions">
      <%= f.submit %>
    </div>

  </div>

  <div class="col-md-7">

    <% if @patient.errors.any? %>
    <div id="error_explanation" class="danger" >
      <h2><%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
        <% @patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>


    <div class="field form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="field  form-group">
      <%= f.label "Nss Number" %><br>
      <%= f.number_field :nssNumber, class: "form-control"  %>
    </div>
    <div class="field form-group">
      <%= f.label :age %><br>
      <%= f.number_field :age,  class: "form-control"  %>
    </div>
    <div class="field form-group">
      <%= f.label :address %><br>
      <%= f.text_area :address, class: "form-control"  %>
    </div>

  </div>



  <% end %>

