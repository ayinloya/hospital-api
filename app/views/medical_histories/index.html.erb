<div class="col-lg-3">
</div>

<div class="col-lg-6">
  <h1 style="text-align:center">Medical histories of name of patient</h1>
  <div class="table-responsive">


    <table class="table table-borded table-hover">
      <thead class="table-head table-responsive">
        <tr>
          <th>#</th>

          <th>Sign and symptoms</th>
          <th>Diagnosis</th>
          <th>Date</th>

          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody class="table-behav">
        <% i=0 %>
        <% @medical_histories.reverse.each do |medical_history| %>
        <tr>
          <td><%= i = i + 1  %></td>        
          <td><%= truncate(medical_history.signsymptoms, :length => 100, :separator => ' ')%></td>
          <td><%= truncate(medical_history.diagnosis, :length => 100, :separator => ' ') %></td>
          <td><%= medical_history.created_at.to_formatted_s(:long_ordinal) %></td>
          <td><%= link_to 'Show', medical_history, class: "btn btn-primary btn-sm" %>
            <%= link_to 'Edit', edit_medical_history_path(medical_history), class: "btn btn-primary btn-sm" %>
            <%= link_to 'Destroy', medical_history, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm"%></td>
          </tr>
          <% end %>

        </tbody>
      </table>

      <br>

      <%= link_to 'New Medical history', new_medical_history_path , class: "btn btn-default" %>

    </div>
  </div>