
<%= form_for @medical_history, html: {role: "form"}  do |f| %>

<% if @medical_history.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@medical_history.errors.count, "error") %> prohibited this medical_history from being saved:</h2>

  <ul>
    <% @medical_history.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field form-group">
  <%= f.label :bp %><br>
  <%= f.text_field :bp, class: "form-control" %>
</div>
<div class="field form-group">
  <%= f.label :temperature %><br>
  <%= f.text_field :temperature, class: "form-control" %>
</div>
<div class="field form-group">
  <%= f.label :weight %><br>
  <%= f.text_field :weight, class: "form-control" %>
</div>
<div class="field form-group">
  <%= f.label :signsymptoms %><br>
  <%= f.text_area :signsymptoms, class: "form-control", rows: "5" %>
</div>
<div class="field form-group">
  <%= f.label :diagnosis %><br>
  <%= f.text_area :diagnosis, class: "form-control", rows: "5" %>
</div>
<div class="field form-group">
  <%= f.label :drugs %><br>
  <%= f.text_area :drugs, class: "form-control", rows: "4" %>
</div>
<div class="field form-group">
  <%= f.label :labTest %><br>
  <%= f.text_area :labTest, class: "form-control", rows: "5" %>
</div>
<%= f.hidden_field :patient_id %>
<div class="actions">
  <%= f.submit nil %>
</div>
<% end %>
